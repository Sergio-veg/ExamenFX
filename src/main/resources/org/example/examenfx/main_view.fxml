<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.examenfx.Controllers.MainController">
    <top>
        <Label text="ExamenFX - Gestión de Usuarios" BorderPane.alignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="table" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="cEmail" prefWidth="200.0" text="Correo" />
                <TableColumn fx:id="cPlatform" prefWidth="150.0" text="Plataforma" />
                <TableColumn fx:id="cRole" prefWidth="100.0" text="Rol" />
                <TableColumn fx:id="cVersion" prefWidth="100.0" text="Versión" />
                <TableColumn fx:id="cCreationDate" prefWidth="200.0" text="Fecha Creación" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Nuevo Usuario" style="-fx-font-weight: bold; -fx-font-size: 16;">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </Label>

                <VBox spacing="8.0">
                    <children>
                        <Label text="Correo *" />
                        <TextField fx:id="txtEmail" promptText="ejemplo@correo.com" />

                        <Label text="Plataforma" />
                        <TextField fx:id="txtPlatform" promptText="Windows, Linux, etc." />

                        <Label text="Versión" />
                        <TextField fx:id="txtVersion" promptText="1.0.0" />

                        <CheckBox fx:id="chkAdmin" mnemonicParsing="false" text="Es administrador" />
                    </children>
                </VBox>

                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addUser" text="Añadir Usuario" />
                <Button fx:id="btnClearAll" mnemonicParsing="false" onAction="#clearAllUsers" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Vaciar Todo" />
            </children>

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <BorderPane.margin>
                <Insets left="10.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>